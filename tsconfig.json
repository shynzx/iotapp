{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2015",               // üëà M√ÅS MODERNO
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true         // üëà NECESARIO PARA QUE funcione `Set` con `for...of`
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": ["src/*"]
  }
}
